<body>
	<div class="men_banner">
   	  <div class="container">
   	  	<%= render "layouts/fheader" %>
   <div class="men">
    <div class="container">
      <h3> MY ORDERS </h3>
    	<table class="table table-hover">
  <thead>
    <tr>
      
      <th>Order ID</th>
      <th>Order Status</th></th>
      <th>Order Date & Time</th>
      <th>Total Price</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
      <% @orders.each do |order| %>
    <tr>
      
      <td><%= order.Order_ID %></td>
      <td>
        <% if order.Order_Status ==1 %>
          Complete
         <% else %>
         Pending
         <% end %>
      </td>
      <td><%= order.Order_Date %></td>
      <td><%= number_to_currency(order.Total_Price,:unit => 'Ksh ') %></td>
    <td> <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target='#<%=order.Order_ID %>'>Details</button></td>     
    </tr>
  <% end %>
  </tbody>
</table>
    </div>
   </div>
  
<% @orders.each do |order| %>
<!-- Modal -->
<div id="<%=order.Order_ID %>" class="modal fade" role="dialog">
  <div class="modal-dialog">

    <!-- Modal content-->
    
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Order ID :<%= order.Order_ID %></h4>
      </div>
      <div class="modal-body">
        <table class="table table-striped">
  <thead>
    <tr>
      <th>Product Name</th>
      <th>Quantity</th>
      <th>Unit Price</th>
      <th>Total</th>
    </tr>
  </thead>
  <tbody>
    
        <% order.item_orders.each do |item| %>
    <tr>
      <th ><%= item.product.Product_Name %></th>
      <td><%= item.quantity %></td>
      <td><%= item.price %></td>
      <td><%= item.price * item.quantity %></td>
    </tr>
      <% end %>
  </tbody>
</table>
        <p></p>
         
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>

  </div>
</div>
 <% end %>
 
   <%= render "layouts/ffooter" %>
</body>
