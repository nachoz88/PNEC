<body>
	<div class="men_banner">
   	  <div class="container">
   	  		<%= render "layouts/fheader" %>
   <div class="account-in">
   	 <div class="container">
		  <div class="check_box">	 
		<div class="col-md-9 cart-items">
			 
			<% @cart_items.each do |item| %>
			 
			 <div class="cart-header2">
				 <!--<div class="close2"> </div>-->
				 <%= button_to '', cart_item_path(item) ,:method =>:delete,:class => "close2"  %>
				  <div class="cart-sec simpleCart_shelfItem">
				  	
				  		 </style>
						<div class="cart-item cyc" >
							 <span class ="img-responsive"><%= image_tag  item.product.Image.thumb.url  if item.product.Image.present?%> </span>
						</div>
					   <div class="cart-item-info">
						<h3><a href="#"><%= item.product.Product_Name %></a></h3>
						
				
						<ul class="qty">
							
							<%= form_for  item , :method =>:patch do |f| %>
								<%= f.label :Quantity %>:
 							 <%= number_field_tag :Quantity, item.Quantity, onchange: "$(this).parent('form').submit();",  min: 1, max: 10  %>
						<% end %>
						<br>
							<li><p><%=item.product.Description%></p></li>
							
						</ul>
							 <div class="delivery">
							 <p>Price : <%= number_to_currency( item.product.Price ,:unit => "Ksh " )%></p>
							 <p>Sub-total : <%= number_to_currency( item.product.Price*item.Quantity ,:unit => "Ksh " )%></p>
							 <span>Delivered in 2-3 business days</span>
							 <div class="clearfix"></div>
				        </div>	
					   </div>
					   <div class="clearfix"></div>
				  </div>
			  </div>
			  <%end%>
		 </div>
		 <div class="col-md-3 cart-total">
			 <!--<a class="continue" href="#">Continue Shopping</a>-->
			 <%= link_to 'Continue Shopping', findex_products_path(:cat =>'') ,:class => "continue" %>
			 <div class="price-details">
				 <h3>Price Details</h3>
				 <span>Total</span>
				 <span class="total1"><%= number_to_currency(current_user.cart_total, :unit => 'Ksh ') %></span>
				 <span>Discount</span>
				 <span class="total1">---</span>
				 <span>Delivery Charges</span>
				 <span class="total1">0.00</span>
				 <div class="clearfix"></div>				 
			 </div>	
			 <ul class="total_price">
			   <li class="last_price"> <h4>TOTAL</h4></li>	
			   <li class="last_price"><span><%= number_to_currency(current_user.cart_total, :unit => 'Ksh ') %></span></li>
			   <div class="clearfix"> </div>
			 </ul>
			 <div class="clearfix"></div>
			 <!--<a class="order" href="#">Place Order</a>-->
				
					
					
 <button type="button" class="btn btn1 btn-primary btn-normal btn-inline" data-toggle="modal" data-target='#order'>CHECKOUT</button>
 
 <div id="order" class="modal fade" role="dialog">
  <div class="modal-dialog">

    <!-- Modal content-->
    
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Order Confirmation and Payment</h4>
      </div>
      <div class="modal-body">
        <table class="table table-striped">
  <thead>
    <tr>
      <th>Product Name</th>
      <th>Quantity</th>
      <th>Unit Price</th>
      <th>Sub-Total</th>
    </tr>
  </thead>
  <tbody>
    
        <% @cart_items.each do |item| %>
    <tr>
      <th ><%= item.product.Product_Name %></th>
      <td><%= item.Quantity %></td>
      <td><%= number_to_currency(item.product.Price, :unit => 'Ksh ') %></td>
      <td><%= number_to_currency(item.product.Price * item.Quantity, :unit => 'Ksh ') %></td>
    </tr>
      <% end %>
  </tbody>
  
  
  



</table>
      <p>
      	
      </p>
         
      </div>
       
      <div class="modal-footer">
      	
      <span style="padding-bottom:30px;">	Total Amount : <%= number_to_currency(current_user.cart_total, :unit => 'Ksh ') %></span>
      	
      
      	 <%= form_tag orders_path do -%>
 
 <script src="https://checkout.stripe.com/checkout.js" class="stripe-button "
    data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
    data-description="PNEC Watches"
    data-amount="<%= current_user.cart_total * 100 %> ">
  </script>
<% end %>
<br>
