<!-- start menu -->
<link href="css/megamenu.css" rel="stylesheet" type="text/css" media="all" />
<script type="text/javascript" src="js/megamenu.js"></script>
<script>$(document).ready(function(){$(".megamenu").megamenu();});</script>
<script src="js/jquery.easydropdown.js"></script>
<script src="js/simpleCart.min.js"> </script>
</head>
<body>
	<div class="men_banner">
   	  <div class="container">
   	  		<%= render "layouts/fheader" %>
   <div class="account-in">
   	 <div class="container">
		  <div class="check_box">	 
		<div class="col-md-9 cart-items">
			 
			<% @cart_items.each do |item| %>
			 
			 <div class="cart-header2">
				 <!--<div class="close2"> </div>-->
				 <%= button_to '', cart_item_path(item) ,:method =>:delete,:class => "close2"  %>
				  <div class="cart-sec simpleCart_shelfItem">
				  	
				  		 </style>
						<div class="cart-item cyc" >
							 <span class ="img-responsive"><%= image_tag  item.product.Image.thumb.url  if item.product.Image.present?%> </span>
						</div>
					   <div class="cart-item-info">
						<h3><a href="#"><%= item.product.Product_Name %></a></h3>
						
				
						<ul class="qty">
							
							<%= form_for  item , :method =>:patch do |f| %>
								<%= f.label :Quantity %>:
 							 <%= number_field_tag :Quantity, item.Quantity, onchange: "$(this).parent('form').submit();",  min: 1, max: 10  %>
						<% end %>
						<br>
							<li><p><%=item.product.Description%></p></li>
							
						</ul>
							 <div class="delivery">
							 <p>Price : <%= number_to_currency( item.product.Price ,:unit => "Ksh " )%></p>
							 <p>Sub-total : <%= number_to_currency( item.product.Price*item.Quantity ,:unit => "Ksh " )%></p>
							 <span>Delivered in 2-3 business days</span>
							 <div class="clearfix"></div>
				        </div>	
					   </div>
					   <div class="clearfix"></div>
				  </div>
			  </div>
			  <%end%>
		 </div>
		 <div class="col-md-3 cart-total">
			 <!--<a class="continue" href="#">Continue Shopping</a>-->
			 <%= link_to 'Continue Shopping', findex_products_path(:cat =>'') ,:class => "continue" %>
			 <div class="price-details">
				 <h3>Price Details</h3>
				 <span>Total</span>
				 <span class="total1"><%= number_to_currency(current_user.cart_total, :unit => 'Ksh ') %></span>
				 <span>Discount</span>
				 <span class="total1">---</span>
				 <span>Delivery Charges</span>
				 <span class="total1">0.00</span>
				 <div class="clearfix"></div>				 
			 </div>	
			 <ul class="total_price">
			   <li class="last_price"> <h4>TOTAL</h4></li>	
			   <li class="last_price"><span><%= number_to_currency(current_user.cart_total, :unit => 'Ksh ') %></span></li>
			   <div class="clearfix"> </div>
			 </ul>
			 <div class="clearfix"></div>
			 <!--<a class="order" href="#">Place Order</a>-->
				
					
					
							<span class = "btn btn1 btn-primary btn-normal btn-inline">	 <%= button_to "Place Order", orders_path(:orders => {:User_ID => current_user.id,:Total_Price => current_user.cart_total}), :method =>:post,:class => "btn btn1 btn-primary btn-normal btn-inline"  %></span>

			 <!--<div class="total-item">-->
				<!-- <h3>OPTIONS</h3>-->
				<!-- <h4>COUPONS</h4>-->
				<!-- <a class="cpns" href="#">Apply Coupons</a>-->
				<!-- <p><a href="#">Log In</a> to use accounts - linked coupons</p>-->
			 <!--</div>-->
			</div>
			<div class="clearfix"></div>
	     </div>
	  </div>
   </div>
